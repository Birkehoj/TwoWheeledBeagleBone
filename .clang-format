# Defines the ANGLE style for automatic reformatting.
# https://code.google.com/p/angleproject/wiki/CodingStandard
# See Clang docs: http://clang.llvm.org/docs/ClangFormatStyleOptions.html

BasedOnStyle: Chromium

Language: Cpp

# Allow double brackets such as std::vector<std::vector<int>>.
Standard: Cpp11

# Keep lines under 100 columns long.
ColumnLimit: 100

# Always break before braces
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true
  # Keeps extern "C" blocks unindented.
  AfterExternBlock: false

AlignAfterOpenBracket: DontAlign
BreakBeforeTernaryOperators: true

# Indent case labels.
IndentCaseLabels: true

# Right-align pointers and references
PointerAlignment: Right

# TODO(jmadill): Decide if we want this on. Doesn't have an "all or none" mode.
AllowShortCaseLabelsOnASingleLine: false

# Useful for spacing out functions in classes
KeepEmptyLinesAtTheStartOfBlocks: true

# Indent nested PP directives.
IndentPPDirectives: AfterHash

# break before comma to be open to extensions without modifying previous lines
BreakBeforeInheritanceComma: true
BreakConstructorInitializers: BeforeComma

FixNamespaceComments: true

# SplitEmptyNamespace: true
# SortUsingDeclaration: true

IndentPPDirectives: AfterHash

AlignEscapedNewlines: false

IncludeBlocks: Regroup
SortIncludes: true

IndentCaseLabels: true

# Indentation, change all numbers together
UseTab: ForIndentation
TabWidth: 4
IndentWidth: 4
AccessModifierOffset: -4

AlwaysBreakTemplateDeclarations: true

ConstructorInitializerAllOnOneLineOrOnePerLine: false

MaxEmptyLinesToKeep: 1

SpaceBeforeParens: ControlStatements

SpacesBeforeTrailingComments: 2

SpacesInParentheses: false
SpaceBeforeAssignmentOperators: true
